{
    "name": "demo/codebuild-parallel-test",
    "description": "CodeBuild parallel test execution demo with PHPUnit",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:shard1": "phpunit --testsuite shard-1",
        "test:shard2": "phpunit --testsuite shard-2",
        "test:shard3": "phpunit --testsuite shard-3"
    }
}
